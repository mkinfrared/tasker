  "lint-staged": {
    ".(ts,tsx)": [
      "eslint --fix packages/**/*.ts?(x)",
      "prettier --write packages/**/*.ts?(x)",
      "git add ."
    ],
    ".scss": [
      "stylelint \"**/*.scss\" --syntax scss --fix",
      "git add ."
    ],
    "*": [
      "yarn test"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
